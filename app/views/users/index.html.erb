<h1><%= t("users") %></h1>
<table>
  <thead>
    <tr>
      <th><%= t("id") %></th>
      <th><%= t("name") %></th>
      <th><%= t("email") %></th>
      <th><%= t("follow") %></th>  
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.name, user %></td>
        <td><%= user.email %></td>
        <% if current_user.following?(user) %>
          <td><%= link_to t("do_unfollow"), unfollow_path(user.id), method: :post %></td>
        <% else %>
          <td><%= link_to t("do_follow"), follow_path(user.id), method: :post %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>
<%= page_entries_info @users%>
